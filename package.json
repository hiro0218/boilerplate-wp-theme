{
  "name": "boilerplate-wp-theme",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode=production",
    "dev": "webpack --mode=development",
    "lint:js": "eslint --ext .js ./src/script/**",
    "lint:sass": "stylelint ./src/style",
    "format:js": "npm run lint:js -- --fix"
  },
  "lint-staged": {
    "**/*.php": [
      "prettier --write",
      "git add"
    ],
    "**/*.js": [
      "eslint --fix",
      "eslint",
      "git add"
    ],
    "**/*.scss": [
      "npm run lint:sass",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hiro0218/boilerplate-wp-theme.git"
  },
  "author": "hiro",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hiro0218/boilerplate-wp-theme/issues"
  },
  "homepage": "https://github.com/hiro0218/boilerplate-wp-theme#readme",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@hiro0218/stylelint-config": "^1.0.0",
    "@prettier/plugin-php": "^0.11.2",
    "autoprefixer": "^9.6.1",
    "babel-loader": "^8.0.5",
    "cache-loader": "^2.0.1",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.10",
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^3.6.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "file-loader": "^3.0.1",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "husky": "^3.0.8",
    "import-glob": "^1.5.0",
    "lint-staged": "^9.4.1",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "postcss-mq-optimize": "^1.1.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.18.2",
    "resolve-url-loader": "^3.1.0",
    "sass-loader": "^8.0.0",
    "url-loader": "^1.1.2",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  }
